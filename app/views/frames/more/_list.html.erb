<div class="grid grid-cols-1 sm:grid-cols-4 items-start" data-controller="lightbox">
<% frames.each do |frame| %>
  <div class="card bg-base-100 shadow rounded-[20px] ml-2 mr-2 mb-2">
    <div class="card-body">
      <% if frame.file.present? %>
        <%= link_to image_tag(frame.file_proxy_url(:two), class: ""), frame.file_proxy_url(:original),
                    class: "mx-auto lb" %>
      <% end %>
      <%= render Frames::Preview::Tags::Component.new(tag_paths: tag_paths(frame), list: true) %>
      <div class="flex justify-center">
        <div class="mx-auto">
          <% case page
             when "user_profile"
              params = ref_map_for_list.merge(query_map)
             when "profile"
              params = ref_map_for_list.merge(query_map)
             else
              params = query_map
             end %>
          <%= link_to frame.name, frame_path(frame, params:),
                      class: "link link-hover",
                      "data-turbo": false %>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

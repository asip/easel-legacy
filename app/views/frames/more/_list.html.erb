<div class="row col-sm-12" data-controller="lightbox">
<% frames.each do |frame| %>
  <div class="card col-sm-3 kadomaru-5">
    <%= render Frames::Preview::Tags::Component.new(tag_paths: tag_paths(frame), list: true) %>
    <% if frame.file.present? %>
      <%= link_to image_tag(frame.file_url(:two), class: "card-img-top"), frame.file_url,
                  class: "mx-auto p-top-5 lb" %>
      <br>
    <% end %>
    <div class="card-block">
      <div class="d-flex justify-content-sm-center">
        <div class="mx-auto" style="padding-bottom: 10px;">
          <%= link_to frame.name, frame_path(frame, params: query_params),
                      class: "mx-auto",
                      "data-turbo-frame": "_top",
                      "data-turbo": false %>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

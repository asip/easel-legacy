<div id="users">
  <br>
  <div class="card bg-base-100 shadow shadow-sm kadomaru-5 ml-2 mr-2">
    <div class="card-body">
      <div class="d-flex">
        <div class="float-start">
          <%= link_to back_to_path do %><i class="bi bi-arrow-left-circle"></i><% end %>
          <%= @user.name %>
        </div>
      </div>
      <%= render Sessions::Preview::Image::Component.new(user: @user, original: false) %>
      <div class="flex justify-center">
        <div class="">
        <% if user_signed_in? && @user.id != current_user.id %>
          <% if current_user.following?(@user) %>
            <%= link_to user_follow_relationships_path(@user.id, ref_params), data: { turbo_method: :delete } do %><button type="button" class="btn btn-outline btn-primary btn-sm">フォローを外す</button><% end %>
          <% else %>
            <%= link_to user_follow_relationships_path(@user.id, ref_params), data: { turbo_method: :post } do %><button type="button" class="btn btn-outline btn-primary btn-sm">フォローする</button><% end %>
          <% end %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


<div id="users">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |form| %>
    <div class="row d-flex justify-content-sm-center border border-white">
      <label for="email" class="col-form-label-sm col-sm-2 label-bg-style">Eメール</label>
      <div class="form-group col-sm-4">
        <%= form.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Eメール", class: "form-control" %>
      </div>
    </div>
    <div class="row d-flex justify-content-sm-center border border-white">
      <label for="password" class="col-form-label-sm col-sm-2 label-bg-style">パスワード</label>
      <div class="form-group col-sm-4">
        <%= form.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "form-control" %>
      </div>
    </div>
    <br>
    <div class="row d-flex justify-content-sm-center">
      <div class="form-group col-sm-6">
        <%= form.submit "ログイン", class: "btn btn-primary" %>
        <%= link_to "戻る", root_path, class: "btn btn-outline-secondary", "data-turbo": false %>
      </div>
    </div>
  <% end %>
</div>

<div id="users">
  <br>
  <div class="card">
    <div class="card-header">
      <div class="float-start">
        <%= link_to root_path(query_params), "data-turbo-frame": "_top" do %><i class="bi bi-arrow-left-circle"></i><% end %>
        プロフィール
      </div>
      <div class="float-end">
        <%= link_to edit_profile_path do %><i class="bi bi-pencil-square"></i><% end %>
        <% unless @user.social_login? %>
          <%= link_to account_password_path do %><i class="bi bi-lock"></i><% end %>
        <% end %>
      </div>
    </div>
    <div class="card-block">
      <br>
      <%= render Sessions::Preview::Image::Component.new(user: @user, original: false) %>
      <div class="row d-flex justify-content-sm-center">
        <label for="name" class="form-label col-sm-3 label-bg-style">ユーザー名</label>
        <div class="form-group col-sm-4">
          <div class="form-control-plaintext"><%= @user.name %></div>
        </div>
      </div>
      <div class="row d-flex justify-content-sm-center">
        <label for="email" class="form-label col-sm-3 label-bg-style">Eメール</label>
        <div class="form-group col-sm-4">
          <div class="form-control-plaintext"><%= @user.email %></div>
        </div>
      </div>
      <!-- <div class="row d-flex justify-content-sm-center">
        <label for="password" class="form-label col-sm-3 label-bg-style">パスワード</label>
        <div class="form-group col-sm-4">
          <div class="form-control-plaintext"><%= @user.password %></div>
        </div>
      </div> -->
      <br>
      <!--<div class="row d-flex justify-content-sm-center">
        <div class="form-group col-sm-6">
          <%= link_to "戻る", root_path(query_params), class: "btn btn-outline-secondary", 'data-turbo': false %>
        </div>
      </div>
      <br>-->
    </div>
  </div>
  <br>
</div>

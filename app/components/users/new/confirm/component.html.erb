<%= render Users::Preview::Image::Component.new(user: @user, original: false) %>
<div class="flex justify-center">
  <div class="grid grid-cols-[50px_1fr] border border-gray-100 rounded bg-base-00 p-3">
    <div class="col-span-2 w-120"></div>
    <div class=""><label for="name" class="">ユーザー名：</label></div>
    <div class="">
      <div class=""><%= @user.name %></div>
      <%= @form.hidden_field :name %>
    </div>
    <div class=""><label for="email" class="">Eメール：</label></div>
    <div class="">
      <div class=""><%= @user.email %></div>
      <%= @form.hidden_field :email %>
    </div>
  </div>
</div>
<%= @form.hidden_field :password %>
<%= @form.hidden_field :password_confirmation %>
<div class="flex justify-center gap-2 mt-2">
  <button type="submit" class="btn btn-outline btn-primary">
    <span class="show-when-enabled">登録</span>
    <span class="show-when-disabled">送信中...</span>
  </button>
  <%= @form.submit "戻る", class: "btn btn-outline btn-warning" %>
</div>

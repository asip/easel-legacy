<% if @user.image.present? %>
  <% if @original %>
    <div class="flex justify-center mb-2">
      <%= link_to image_tag(@user.image_proxy_url(:three), class: "mx-auto"),
                  @user.image_url_for_view, class: "mx-auto lb" %>
    </div>
  <% else %>
    <div class="flex justify-center mb-2">
      <%= image_tag(@user.image_proxy_url(:three), class: "mx-auto") %>
    </div>
  <% end %>
<% end %>

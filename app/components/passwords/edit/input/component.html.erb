<div class="flex justify-center">
  <div class="grid grid-cols-[90px_1fr] border border-gray-100 rounded bg-base-00 p-3">
    <div class="col-span-2 w-120"></div>
    <label for="current_password" class="flex items-center">現在のパスワード：</label>
    <div class="">
      <%= @form.password_field :current_password, autofocus: true, autocomplete: "current-password", placeholder: "現在のパスワード", class: "input" %>
    </div>
    <label for="password" class="flex items-center">パスワード：</label>
    <div class="">
      <%= @form.password_field :password, placeholder: "パスワード", autocomplete: "new-password", class: "input" %>
    </div>
    <label for="password_confirmation" class="flex items-center">パスワード(確認)：</label>
    <div class="">
      <%= @form.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード(確認)", class: "input" %>
    </div>
  </div>
</div>
<div class="flex justify-center gap-2 mt-2">
  <%= @form.submit "更新", class: "btn btn-outline btn-primary" %>
  <%= link_to "戻る", @back_to_path, class: "btn btn-outline btn-warning" %>
</div>

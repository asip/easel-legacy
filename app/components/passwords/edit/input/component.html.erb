<div class="row d-flex justify-content-sm-center border border-white">
  <label for="password" class="col-form-label col-sm-3 label-bg-style">現在のパスワード：</label>
  <div class="form-group col-sm-4">
    <%= @form.password_field :current_password, autofocus: true, autocomplete: "current-password", placeholder: "現在のパスワード", class: "form-control" %>
  </div>
</div>

<div class="row d-flex justify-content-sm-center border border-white">
  <label for="password" class="col-form-label col-sm-3 label-bg-style">パスワード：</label>
  <div class="form-group col-sm-4">
    <%= @form.password_field :password, placeholder: "パスワード", autocomplete: "new-password", class: "form-control" %>
  </div>
</div>
<div class="row d-flex justify-content-sm-center border border-white">
  <label for="password_confirmation" class="col-form-label col-sm-3 label-bg-style">パスワード(確認)：</label>
  <div class="form-group col-sm-4">
    <%= @form.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード(確認)", class: "form-control" %>
  </div>
</div>
<br>
<div class="d-flex justify-content-sm-center">
  <div class="form-group col-sm-6">
    <%= @form.submit "更新", class: "btn btn-primary" %>
    <%= link_to "戻る", @back_to_path, class: "btn btn-outline-secondary" %>
  </div>
</div>

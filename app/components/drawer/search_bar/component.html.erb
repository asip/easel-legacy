<div class="drawer-side">
  <label for="serach-sidebar" aria-label="close sidebar" class="drawer-overlay"></label>
  <div class="mt-[70px]">
    <div class="card bg-base-100 min-h-full w-80 p-4">
      <div class="card-block" data-controller="calendar" data-calendar-date-value="<%= @day %>">
        <div class="flex justify-center">
          <div class="mx-auto">
            <div data-calendar-target="cal"></div>
          </div>
        </div>
        <div class="flex justify-center">
          <%= render FrameSearch::Component.new(word: @word) %>
        </div>
      </div>
    </div>
  </div>
</div>

<dialog id="delete_modal" class="modal">
  <div class="modal-box">
    <% if false %><h3 class="text-lg font-bold">イメージの削除</h3><% end %>
    <p class="py-4">削除してもよろしいですか？</p>
    <div class="modal-action">
      <%= link_to "削除", @path, data: { turbo_method: :delete }, class: "btn btn-outline btn-secondary" %>
      <form method="dialog">
        <button class="btn btn-outline btn-primary">閉じる</button>
      </form>
    </div>
  </div>
</dialog>
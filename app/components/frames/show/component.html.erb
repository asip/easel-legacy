<div id="frames">
  <br>
  <div class="card bg-base-100 shadow rounded-[20px] ml-2 mr-2">
    <div class="card-body">
      <div class="flex justify-between">
        <div>
          <%= link_to helpers.back_to_path do %><i class="bi bi-arrow-left-circle text-accent hover:text-primary"></i><% end %>
        </div>
        <div>
          <%= link_to user_path(@frame.user, helpers.query_map), class: "link link-hover" do %>
            <%= @frame.user.name %>
          <% end %>
        </div>
      </div>
      <div class="flex justify-center mb-2">
        <%= render ::Display::Image::Component.new(model: @frame, original: true, photoswipe: true) %>
      </div>
      <% @tag_map = FramesHelper.tag_map(frame: @frame) %>
      <div class="flex justify-center flex-wrap gap-1 mb-2">
        <% if helpers.user_signed_in? && @frame.user_id == helpers.current_user.id %>
        <div class="badge badge-outline badge-accent rounded-full"><%= t("enums.private.#{@frame.private}") %></div>
        <% end %>
        <% if @tag_map.size > 0 %>
        <%= render ::Display::Tags::Component.new(tag_map: @tag_map) %>
        <% end %>
      </div>
      <div class="flex justify-center">
        <table class="table table-bordered table-rounded">
          <tbody>
            <tr>
              <td class="w-[9em]">
                名前
              </td>
              <td>
                <%= @frame.name %>
              </td>
            </tr>
            <tr>
              <td>
                撮影者/作者
              </td>
              <td>
                <%= @frame.creator_name %>
              </td>
            </tr>
            <tr>
              <td>
                撮影日時
              </td>
              <td>
                <%= @frame.shooted_at.present? ? l(@frame.shooted_at) : "" %>
              </td>
            </tr>
            <tr>
              <td>
                コメント
              </td>
              <td class="wrap-break-word">
                <%= simple_format(h(@frame.comment)) %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="flex justify-between">
        <div><%= l @frame.created_at %></div>
        <div><%= l @frame.updated_at %></div>
      </div>
      <% if helpers.user_signed_in? && @frame.user_id == helpers.current_user.id %>
      <div class="flex justify-center gap-2">
        <%= link_to "変更", edit_frame_path(@frame), class: "btn btn-outline btn-primary", "data-turbo-prefetch": false %>
        <%# Button trigger modal %>
        <button type="button" class="btn btn-outline btn-secondary" onclick="delete_modal.showModal()">
          削除
        </button>
        <%= link_to "戻る", helpers.back_to_path, class: "btn btn-outline btn-warning" %>
      </div>
      <% end %>
    </div>
  </div>
  <% if helpers.user_signed_in? && @frame.user_id == helpers.current_user.id %>
    <%= render Frames::Delete::Modal::Component.new(path: frame_path(@frame)) %>
  <% end %>
</div>

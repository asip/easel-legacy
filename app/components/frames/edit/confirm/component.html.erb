<% if @frame.draft? || @tag_map.size > 0 %>
<div class="flex justify-center flex-wrap gap-1 mb-2">
  <% if @frame.draft? %>
  <div class="badge badge-outline badge-accent rounded-full"><%= t("enums.private.#{@frame.private}") %></div>
  <% end %>
  <% if @tag_map.size > 0 %>
  <%= render ::Preview::Tags::Component.new(tag_map: @tag_map) %>
  <% end %>
</div>
<% end %>
<%= @form.hidden_field :private %>
<%= @form.hidden_field :tag_list, value: @frame.tag_list %>
<div class="flex justify-center">
  <table class="table table-bordered table-rounded">
    <tbody>
      <tr>
        <td class="w-[9em]">
          <label for="name" class="">名前</label>
        </td>
        <td>
          <%= @frame.name %>
          <%= @form.hidden_field :name %>
        </td>
      </tr>
      <tr>
        <td>
          <label for="creator_name" class="">撮影者/作者</label>
        </td>
        <td>
          <%= @frame.creator_name %>
          <%= @form.hidden_field :creator_name %>
        </td>
      </tr>
      <tr>
        <td>
          <label for="shooted_at" class="">撮影日時</label>
        </td>
        <td>
          <%= @frame.shooted_at.present? ? l(@frame.shooted_at) : "" %>
          <%= @form.hidden_field :shooted_at %>
        </td>
      </tr>
      <tr>
        <td>
          <label for="comment" class="">コメント</label>
        </td>
        <td class="wrap-break-word">
          <%= simple_format(h(@frame.comment)) %>
          <%= @form.hidden_field :comment %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
<div class="flex justify-center gap-2 mt-2">
  <button type="submit" class="btn btn-outline btn-primary" data-turbo-prefetch="false">
    <span class="show-when-enabled">更新</span>
    <span class="show-when-disabled">送信中...</span>
  </button>
  <%= @form.submit "戻る", class: "btn btn-outline btn-warning" %>
</div>

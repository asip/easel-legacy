{
  "extends": [
    "markuplint:recommended-vue"
  ],
  "parser": {
    ".erb$": "@markuplint/erb-parser",
    ".vue$": "@markuplint/vue-parser"
  },
  "specs": {
    ".vue$": "@markuplint/vue-spec"
  },
  "rules": {
    "required-h1": false,
    "required-attr": true,
    "require-accessible-name": false,
    "no-hard-code-id": false
  },
  "nodeRules": [
    {
      "selector": "img",
      "rules": {
        "required-attr": "alt"
      }
    }
  ]
}

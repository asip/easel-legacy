{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strictFunctionTypes": false,
    "outDir": "./app/assets/builds"
  },
  "include": [
    "./app/javascript/**/*.ts",
    "./vite.config.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
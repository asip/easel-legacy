{
  "name": "easel",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "node ./config/esbuild/esbuild.build.js",
    "watch": "node ./config/esbuild/esbuild.watch.js",
    "build:rspack": "rspack --config ./config/rspack/rspack.config.js",
    "build:webpack": "webpack --config ./config/webpack/webpack.config.js",
    "build:scss": "sass ./app/assets/stylesheets/:./app/assets/builds --no-source-map --load-path=node_modules",
    "build:tailwind": "pnpx @tailwindcss/cli -i ./app/assets/stylesheets/tailwind/application.css -o ./app/assets/builds/tailwind.css --minify",
    "build:css": "pnpm build:tailwind && pnpm build:scss",
    "build:font-bootstrap": "copyfiles -f node_modules/bootstrap-icons/font/fonts/* public/assets/fonts",
    "build:font-fontawesome": "copyfiles -f node_modules/@fortawesome/fontawesome-free/webfonts/* ./public/assets/webfonts",
    "build:font": "pnpm build:font-bootstrap && pnpm build:font-fontawesome",
    "watch:ts": "tsc-watch --noClear -p tsconfig.json",
    "lint": "eslint --fix './app/javascript/**/*.{js,ts,vue}'",
    "markuplint": "markuplint './app/javascript/**/*.vue'"
  },
  "devDependencies": {
    "@markuplint/vue-parser": "^4.6.19",
    "@markuplint/vue-spec": "^4.5.19",
    "@rspack/cli": "1.3.15",
    "@rspack/core": "1.3.15",
    "@tailwindcss/cli": "4.1.9",
    "@types/bootstrap": "^5.2.10",
    "@types/photoswipe": "4.1.6",
    "@types/sanitize-html": "^2.16.0",
    "@types/toastify-js": "^1.12.4",
    "@types/vanillajs-datepicker": "^1.3.5",
    "@types/yaireo__tagify": "^4.27.0",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "copyfiles": "^2.4.1",
    "daisyui": "5.0.43",
    "esbuild": "^0.25.5",
    "esbuild-loader": "^4.3.0",
    "esbuild-plugin-vue3": "^0.4.2",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-vue": "^10.2.0",
    "markuplint": "^4.12.0",
    "prettier": "^3.5.3",
    "sass": "^1.89.2",
    "tailwindcss": "4.1.9",
    "tsc-watch": "^7.1.1",
    "typescript": "^5.8.3",
    "vue-loader": "17.4.2",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo": "^8.0.13",
    "@hotwired/turbo-rails": "^8.0.16",
    "@vueuse/integrations": "^13.3.0",
    "@yaireo/tagify": "^4.35.1",
    "axios": "^1.9.0",
    "bootstrap": "^5.3.6",
    "bootstrap-icons": "^1.13.1",
    "glightbox": "^3.3.1",
    "photoswipe": "5.4.4",
    "photoswipe-fullscreen": "git+https://github.com/arnowelzel/photoswipe-fullscreen",
    "rails_admin": "3.3.0",
    "sanitize-html": "^2.17.0",
    "stimulus": "^3.2.2",
    "toastify-js": "^1.12.0",
    "turbo-mount": "^0.4.2",
    "universal-cookie": "^7.2.2",
    "vanillajs-datepicker": "^1.3.4",
    "vue": "3.5.16"
  }
}
